@model IEnumerable<Actor>
@{
    ViewData["Title"] = "List of Actors";
}

<div class="row">
    <table class="table ml-lg-5">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(m => m.ProfilePictureURL)</th>
                <th>@Html.DisplayNameFor(m => m.FullName)</th>
                <th>@Html.DisplayNameFor(m => m.Bio)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="align-middle">
                        <img class="rounded-circle" src="@item.ProfilePictureURL" alt="@item.FullName" style="max-width: 150px;" />
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(m => item.FullName)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(m => item.Bio)
                    </td>
                    <td class="align-middle">
                        <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i>Edit</a> |
                        <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye"></i>Details</a> |
                        <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i>Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="text-white" style="position:fixed; right:25px; bottom:25px;">
    <a asp-controller="Actors" asp-action="Create" class="btn btn-success"><i class="bi bi-plus-circle"> </i> Add New </a>
</div>